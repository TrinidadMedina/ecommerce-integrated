<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body>      
    <div class="container">
        <div class="row">
            <div class="col border p-2" style="margin:20px; background-color:secondary">
                <h5 class="text-center">Ingresa tu producto</h5>
                <br>
                <form action="/api/productos" method="POST">
                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input type="text" name="productname" class="form-control" id="productnamename" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Precio</label>
                        <input type="text" name="price" class="form-control" id="price" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">URL Imagen</label>
                        <input type="text" name="thumbnail" class="form-control" id="thumbnail" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Stock</label>
                        <input type="text" name="stock" class="form-control" id="stock" required>
                    </div>
                    <div class="col text-center">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>  
            </div>

            <div class="col-md-8" style="margin:20px">
                <div class="col text-center">
                    <% if(!options){ %>
                        <div class="alert alert-secondary text-center" role="alert">
                            No se encontraron productos
                        </div>
                    <% }else{ %>
                        <h5 class="text-center">Carro compartido</h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Precio</th>
                                    <th>Foto</th>
                                </tr>
                            </thead>
                            <tbody id="productsList">
                                <% options.forEach(i=>{ %>
                                    <tr>
                                        <td><%= i.productname %></td>
                                        <td><%= i.price %></td>
                                        <td><img class="img-fluid" style='width: 35px' src=<%= i.thumbnail %> ></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    <% } %>
                </div>  
            </div>
            <div >
                <div class="text-center border-bottom">
                    Chat Room
                </div>
                <div class="row">
                    <div class="col-md-8 text-center" style="margin:20px" id="chatBox">
                        <form id="formPublicarMensaje" autocomplete="off">
                            <input id="inputMensaje" type="text"  placeholder="Ingresa un mensaje..." require>
                            <button id="btnEnviar" type="submit">Enviar!</button>
                        </form>
                        <br>
                        <br>
                        <ul id="messagesList">
  
                        </ul>
                    </div>
                </div>
            </div>
        </div>   
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/main.js"></script>
</body>
</html>